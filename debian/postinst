#!/bin/sh
# postinst script for GlassNet

case "$1" in
    configure)
	if [ -x /bin/systemctl ] ; then
	    /bin/systemctl daemon-reload
	    if [ -f /usr/lib/systemd/system/gncd.service ] ; then
		/bin/systemctl start gncd.service
		/bin/systemctl enable gncd.service
	    fi
	    if [ -f /usr/lib/systemd/system/gnmd.service ] ; then
		/bin/systemctl start gnmd.service
		/bin/systemctl enable gnmd.service
	    fi
	fi
	if [ ! -f /etc/glassnet.conf ] ; then
	    if [ -f /usr/lib/glassnet-server/glassnet-sample.conf ] ; then
		cp /usr/lib/glassnet-server/glassnet-sample.conf /etc/glassnet.conf
	    fi
	    if [ -f /usr/lib/glassnet-mgmnt/glassnet-sample.conf ] ; then
		cp /usr/lib/glassnet-mgmnt/glassnet-sample.conf /etc/glassnet.conf
	    fi
	fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
